---
import { Icon } from 'astro-icon/components';

interface Props {
  title: string;
  description: string;
  href: string;
  icon?: string;
  lastUpdated?: string;
  status?: 'active' | 'completed' | 'pending';
  agents?: string;
}

const {
  title,
  description,
  href,
  icon = "lucide:file-text",
  lastUpdated,
  status = 'active',
  agents
} = Astro.props;

const statusConfig = {
  active: { label: 'Active', color: 'var(--color-accent-success)' },
  completed: { label: 'Completed', color: 'var(--color-accent-primary)' },
  pending: { label: 'Pending', color: 'var(--color-text-tertiary)' }
};
---

<a href={href} class="report-card">
    <div class="card-header">
        <div class="icon-wrapper">
            <Icon name={icon} class="card-icon" />
        </div>
        <div class="card-meta">
            {lastUpdated && (
                <span class="last-updated">{lastUpdated}</span>
            )}
            <span class="status-indicator" style={`background-color: ${statusConfig[status].color}`}></span>
        </div>
    </div>

    <div class="card-content">
        <h3 class="card-title">{title}</h3>
        {agents && (
            <div class="agent-badge">{agents}</div>
        )}
        <p class="card-description">{description}</p>
    </div>

    <div class="card-footer">
        <span class="view-link">
            View report
            <Icon name="lucide:arrow-right" class="arrow-icon" />
        </span>
    </div>
</a>

<style>
    .report-card {
        display: flex;
        flex-direction: column;
        background: var(--color-bg-elevated);
        border: 1px solid var(--color-border-light);
        border-radius: var(--radius-lg);
        padding: var(--space-4);
        text-decoration: none;
        transition: all var(--transition-base);
        box-shadow: var(--shadow-sm);
        position: relative;
        overflow: hidden;
    }

    .report-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 2px;
        background: linear-gradient(90deg, var(--color-accent-primary), var(--color-accent-secondary));
        transform: scaleX(0);
        transform-origin: left;
        transition: transform var(--transition-base);
    }

    .report-card:hover {
        border-color: var(--color-border-medium);
        box-shadow: var(--shadow-lg);
        transform: translateY(-2px);
    }

    .report-card:hover::before {
        transform: scaleX(1);
    }

    .card-header {
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        margin-bottom: var(--space-3);
    }

    .icon-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: var(--radius-md);
        background: linear-gradient(135deg, rgba(37, 99, 235, 0.1), rgba(124, 58, 237, 0.1));
    }

    .card-icon {
        width: 20px;
        height: 20px;
        color: var(--color-accent-primary);
    }

    .card-meta {
        display: flex;
        align-items: center;
        gap: var(--space-2);
    }

    .last-updated {
        font-size: var(--font-size-xs);
        color: var(--color-text-tertiary);
        font-variant-numeric: tabular-nums;
    }

    .status-indicator {
        width: 8px;
        height: 8px;
        border-radius: 50%;
    }

    .card-content {
        flex: 1;
        margin-bottom: var(--space-3);
    }

    .card-title {
        font-size: var(--font-size-lg);
        font-weight: 600;
        color: var(--color-text-primary);
        margin-bottom: var(--space-2);
        line-height: 1.3;
        letter-spacing: -0.01em;
    }

    .agent-badge {
        display: inline-block;
        padding: var(--space-1) var(--space-3);
        margin-bottom: var(--space-2);
        border-radius: var(--radius-md);
        font-size: var(--font-size-xs);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        background: linear-gradient(135deg, rgba(37, 99, 235, 0.1), rgba(124, 58, 237, 0.1));
        color: var(--color-accent-primary);
        border: 1px solid rgba(37, 99, 235, 0.2);
    }

    .card-description {
        font-size: var(--font-size-sm);
        color: var(--color-text-secondary);
        line-height: 1.6;
        margin: 0;
    }

    .card-footer {
        display: flex;
        align-items: center;
        padding-top: var(--space-3);
        border-top: 1px solid var(--color-border-light);
    }

    .view-link {
        display: flex;
        align-items: center;
        gap: var(--space-2);
        font-size: var(--font-size-sm);
        font-weight: 500;
        color: var(--color-accent-primary);
        transition: gap var(--transition-fast);
    }

    .report-card:hover .view-link {
        gap: var(--space-3);
    }

    .arrow-icon {
        width: 16px;
        height: 16px;
        transition: transform var(--transition-fast);
    }

    .report-card:hover .arrow-icon {
        transform: translateX(2px);
    }
</style>
